<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GravyVR</title>
    <link rel="stylesheet" href="~/css/site.scss" type="text/css" asp-append-version="true" />
    @await RenderSectionAsync("Head", required: false)
</head>

<body>
    <header>
        <nav>
            <div class="container navbar-content">
                <b>GravyVR</b>
                <a href="/Venues" class="@(ViewBag.Section == "Venues" ? "active" : "")">Venues</a>
                <a href="/Tooling" class="@(ViewBag.Section == "Tooling" ? "active" : "")">Tooling</a>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    @await RenderSectionAsync("Data", required: false)
    <script type="text/javascript" src="~/js/app.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>